{
  "name": "signet",
  "version": "1.0.0-beta",
  "description": "Signet - Modern NIP-46 remote signer",
  "main": "dist/index.js",
  "bin": {
    "signet": "dist/index.js",
    "signet-client": "dist/client/client.js"
  },
  "files": [
    "dist",
    "scripts/start.js",
    "prisma/schema.prisma",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Letdown2491/signet"
  },
  "scripts": {
    "build": "prisma generate && tsup src/index.ts; tsup src/daemon/index.ts -d dist/daemon; tsup src/client.ts -d dist/client",
    "build:client": "tsup src/client.ts -d dist/client",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:create": "npx prisma db push --preview-feature",
    "start": "node ./scripts/start.js",
    "lfg": "node ./scripts/start.js start",
    "signet": "node dist/index.js",
    "client": "node dist/client/client.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "nostr"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/view": "^10.0.2",
    "@inquirer/password": "^1.1.2",
    "@inquirer/prompts": "^1.2.3",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@scure/base": "^1.2.6",
    "@signet/types": "workspace:*",
    "@types/yargs": "^17.0.33",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-import": "^2.32.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.2.1",
    "handlebars": "^4.7.8",
    "isomorphic-ws": "^5.0.0",
    "nostr-tools": "^2.17.0",
    "prisma": "^7.2.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.18.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^20.19.0",
    "@vitest/coverage-v8": "^4.0.16",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
